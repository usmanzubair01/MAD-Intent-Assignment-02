<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5F5F5"
    tools:context=".SecondActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Activity"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Received Data via Intent Extras"
        android:textSize="14sp"
        android:textColor="#757575"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card Container for Data -->
    <LinearLayout
        android:id="@+id/cardData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:elevation="4dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubheader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Student Name -->
        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Name: Loading..."
            android:textSize="16sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Roll Number -->
        <TextView
            android:id="@+id/tvRollNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Roll Number: Loading..."
            android:textSize="16sp"
            android:textColor="#212121"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Semester -->
        <TextView
            android:id="@+id/tvSemester"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Semester: Loading..."
            android:textSize="16sp"
            android:textColor="#212121"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Intent Information Section -->
    <TextView
        android:id="@+id/tvIntentInfoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intent Information"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/cardData"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Intent Info Display -->
    <LinearLayout
        android:id="@+id/cardIntentInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="20dp"
        android:elevation="4dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvIntentInfoLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvIntentInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading Intent Details..."
            android:textSize="14sp"
            android:textColor="#424242"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Info Footer -->
    <TextView
        android:id="@+id/tvInfoFooter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="This activity demonstrates:\n• Explicit Intent\n• Intent Extras (Data passing)\n• Intent Flags (CLEAR_TOP)\n• Intent Categories"
        android:textSize="12sp"
        android:textColor="#757575"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        app:layout_constraintTop_toBottomOf="@id/cardIntentInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
